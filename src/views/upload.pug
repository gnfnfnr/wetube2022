extends base.pug

block content
  if errorMessage
    div= errorMessage
  form(method="POST")
    input(
      name="title",
      placeholder="Title",
      required,
      type="text",
      maxlength=90
    )
    input(
      name="description",
      placeholder="description",
      required,
      type="text",
      minlength=20
    )
    input(
      name="hastags",
      placeholder="hastags, separated by comma",
      required,
      type="text"
    )
    input(type="submit", value="upload video")
